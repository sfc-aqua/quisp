%description:

Test the <disconnect> command

%inifile: omnetpp.ini

[General]
network = Test
ned-path = .;../../../../src;../../lib
cmdenv-express-mode = false

**.scenarioManager.script = xmldoc("scenario.xml")

%file: test.ned

import inet.common.scenario.ScenarioManager;

module Node
{
    gates:
        input in;
        input inv[];
        output out;
        output outv[];
        inout gate;
        inout gatev[];
    connections allowunconnected:
}

network Test
{
    submodules:
        scenarioManager: ScenarioManager;
        src: Node;
        sink: Node;
        peer1: Node;
        peer2: Node;
        msrc: Node;
        msink: Node;
        mpeer1: Node;
        mpeer2: Node;

    connections allowunconnected:
        src.out --> sink.in;
        peer1.gate <--> peer2.gate;
        msrc.outv++ --> msink.inv++;
        mpeer1.gatev++ <--> mpeer2.gatev++;
}

%#--------------------------------------------------------------------------------------------------------------
%file: scenario.xml
<scenario>
    <at t="1.0">
        <disconnect src-module="src" dest-module="sink"/>
        <disconnect src-module="peer1" dest-module="peer2"/>
        <disconnect src-module="msrc" dest-module="msink"/>
        <disconnect src-module="mpeer1" dest-module="mpeer2"/>
    </at>
</scenario>

