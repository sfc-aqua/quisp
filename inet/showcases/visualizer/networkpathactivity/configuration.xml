<config>
	<!-- routers eth interfaces -->
		<interface hosts="router0" names="eth0" address="192.168.0.1" netmask="255.255.255.x"/>
		<interface hosts="router0" names="eth1" address="192.168.1.1" netmask="255.255.255.x"/>
		<interface hosts="router2" names="eth0" address="192.168.2.1" netmask="255.255.255.x"/>
		<interface hosts="router2" names="eth1" address="192.168.3.1" netmask="255.255.255.x"/>
	<!-- routers ppp interfaces -->
	 	<interface hosts='router*' names='ppp*' address='10.x.x.x' netmask='255.x.x.x'/>
	<!-- sources and destinations -->
		<interface hosts='**' address="192.168.x.x" />
</config>