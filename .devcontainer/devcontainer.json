{
	"name": "QuISP Dev",
	"containerEnv": {
		// "DOCKER_DEFAULT_PLATFORM": "$(echo $(uname) | tr '[:upper:]' '[:lower:]')/$(uname -i)"
	},
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash -c \" test ! -d .venv && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt && test ! -d quisp.py/.git && git submodule update --init quisp.py && pip install -e quisp.py && bear -- make run-unit-test MODE=debug && make exe\"",
	"remoteUser": "vscode",
	"postStartCommand": "sudo service ssh start",
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		2222, // SSH
		5901, // VNC
		6080 // noVNC
	],
	"features": {
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"version": "latest"
		}
	},
	/*"runArgs": ["--net-host", "--shm-size=1g"],
	"remoteEnv": {
		"DISPLAY": ":0"
	},*/
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-vscode-remote.remote-containers",
				"llvm-vs-code-extensions.vscode-clangd",
				"vadimcn.vscode-lldb",
				"matepek.vscode-catch2-test-adapter",
				"littlefoxteam.vscode-python-test-adapter",
				"EditorConfig.EditorConfig",
				"cschlosser.doxdocgen"
			]
		}
	}
}
